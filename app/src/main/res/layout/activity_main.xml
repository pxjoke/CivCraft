            android:textSize="10dp"
            android:onClick="onCatClick"
            android:layout_marginTop="5dp"
            android:background="#5d4037"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
